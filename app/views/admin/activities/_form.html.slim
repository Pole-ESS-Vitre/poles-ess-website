= f.form_errors

.form-group.required
  = f.label :title, class: "font-weight-bold"
  = f.text_field :title, class: 'form-control'

= render "admin/themes/form_items/theme_checkboxes", f: f
= render "admin/profiles/form_items/profile_checkboxes", f: f

.form-group.required
  = f.label :short_description, class: "font-weight-bold"
  = f.text_field :short_description, class: 'form-control'

.form-group
  = f.label :description, class: "font-weight-bold"
  = f.rich_text_area :description

= render partial: 'admin/shared/picture_form', locals: { \
  f: f, \
  destroy_path: f.object.image&.persisted? ? destroy_upload_admin_activity_path(f.object, f.object.image.id, redirect: :edit) : nil}
= render "admin/resources/nested_form", f: f

= render "admin/shared/action_btns", f: f, index_path: admin_activities_path
